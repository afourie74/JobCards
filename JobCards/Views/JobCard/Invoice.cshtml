@model JobCards.Models.ViewModel.JobCardView
@{
    ViewBag.Title = "Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Invoice</h2>
<br />
<h3>By clicking the "I confirm" button you are confirming that the <b>Invoice</b> for job number @Model.JobCardID has been completed.</h3>
